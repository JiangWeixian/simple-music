@import "~assets/stylus/variable.styl"

.singer-info
 .info
   font-size: $font-size-large-xxx
   h2
     height: 78px
     line-height: 78px
     text-indent: 20px
     position: relative
     &::before
       content: ''
       background-color: $color-theme-primary
       width: 10px
       height: $font-size-large-xxx
       position: absolute
       top: $font-size-large-xxx
       left: 0
   pre
     color: $color-icon
     padding: 0 20px
     line-height: 1.5
     white-space:pre-wrap;
     word-wrap:break-word;

.singer-info.loading
  .info
    h2
      span
        min-width: 100px
        height: $font-size-large-xxx
        color: $color-background
        background-color: $color-background
      &::before
        background-color: $color-background
    pre
      color: $color-background
      margin: 0 20px
      background-color: $color-background


.container
  .simisinger
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    .img-wrapper
      width: 140px
      height: 140px
      overflow: hidden
      img
        width: inherit
        height: inherit
        object-fit: fill
    .singer-name
      width: 140px
      margin-top: 10px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap

.singer-info.loading
  .info
    .container
      .singer-name
        background-color: $color-background
        color: $color-background
