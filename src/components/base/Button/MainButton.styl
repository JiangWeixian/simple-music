@import "~assets/stylus/variable.styl"

.button
  width 100%
  height: 70px
  color: white
  text-align: center
  display block

.button.primary-button
  background-color: $color-theme-primary

.loading-main-button
  .button
    height: 70px
    background-color: $color-background

.medium
  font-size: $font-size-large-xxxl
  height: 70px
  line-height: 70px
.medium.secondary-button
  color: $color-text


.large
  height: 94px
  line-height: 94px
  font-size: $font-size-large-xxxll
.large.secondary-button
  color $color-text


.small
  height: 60px
  line-height: 60px
  font-size: $font-size-large-xxxl
.small.secondary-button
  color $color-text

.white
  background-color: white

.gray
  background-color: $color-background
