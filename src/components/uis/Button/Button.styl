@import "~assets/stylus/variable.styl"

.btn
  width 100%
  height: 70px
  color: white
  display flex
  align-items center
  justify-content center

.primary
  background-color: $color-theme-primary

.medium
  font-size: $font-size-large-xxxl
  height: 70px
  line-height: 70px

.btn__primary
  @extend .primary
  @extend .btn

.btn__primary__medium
  @extend .btn__primary
  @extend .medium
